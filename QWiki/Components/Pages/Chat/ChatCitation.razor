@using System.Web
@if (!string.IsNullOrWhiteSpace(viewerUrl))
{
    <a href="@viewerUrl" target="_blank" class="citation">
        @if (File.EndsWith(".vtt"))
        {
            <!-- Video icon for transcript files -->
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m15.75 10.5 4.72-4.72a.75.75 0 0 1 1.28.53v11.38a.75.75 0 0 1-1.28.53l-4.72-4.72M4.5 18.75h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25h-9A2.25 2.25 0 0 0 2.25 7.5v9a2.25 2.25 0 0 0 2.25 2.25Z" />
            </svg>
        }
        else
        {
            <!-- Document icon for PDF and other files -->
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
            </svg>
        }
        <div class="citation-content">
            <div class="citation-file">@DisplayFileName</div>
            <div>@Quote</div>
        </div>
    </a>
}

@code {
    [Parameter]
    public required string File { get; set; }

    [Parameter]
    public int? PageNumber { get; set; }

    [Parameter]
    public required string Quote { get; set; }

    [Parameter]
    public string? SourceUrl { get; set; }

    private string? viewerUrl;
    private string DisplayFileName => File.EndsWith(".vtt") 
        ? File.Replace("-en-US.vtt", ".mp4") 
        : File;

    protected override void OnParametersSet()
    {
        viewerUrl = null;

        // Check file type first to determine the appropriate viewer
        if (File.EndsWith(".pdf"))
        {
            var search = Quote?.Trim('.', ',', ' ', '\n', '\r', '\t', '"', '\'');
            viewerUrl = $"lib/pdf_viewer/viewer.html?file=/Data/{HttpUtility.UrlEncode(File)}#page={PageNumber}&search={HttpUtility.UrlEncode(search)}&phrase=true";
        }
        else if (File.EndsWith(".pptx") || File.EndsWith(".pptm"))
        {
            // Use a custom PowerPoint viewer that can navigate to specific slides
            viewerUrl = $"lib/ppt_viewer/viewer.html?file=/Data/{HttpUtility.UrlEncode(File)}&slide={PageNumber}";
        }
        else if (File.EndsWith(".vtt"))
        {
            // For transcript files, link to the video viewer page
            var videoFileName = File.Replace("-en-US.vtt", ".mp4");
            var folderName = Path.GetFileNameWithoutExtension(File).Replace("-en-US", "");
            var videoPath = $"{folderName}/{videoFileName}";
            viewerUrl = $"/video-viewer?video={HttpUtility.UrlEncode(videoPath)}";
        }
        // If SourceUrl is provided (for wiki pages) and no specific viewer is set, use it directly
        else if (!string.IsNullOrEmpty(SourceUrl))
        {
            viewerUrl = SourceUrl;
        }
    }
}
